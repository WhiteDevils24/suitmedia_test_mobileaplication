<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screen1"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/et_nameInput"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="260dp"
        android:background="@drawable/edittext_shape"
        android:fontFamily="@font/poppins_medium"
        android:hint="Name"
        android:includeFontPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="0dp"
        android:paddingEnd="16dp"
        android:paddingBottom="0dp"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_palindromeInput"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_shape"
        android:fontFamily="@font/poppins_medium"
        android:hint="Palindrome"
        android:includeFontPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="0dp"
        android:paddingEnd="16dp"
        android:paddingBottom="0dp"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_nameInput" />

    <Button
        android:id="@+id/btn_check"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/button_shape"
        android:text="CHECK"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins_medium"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_palindromeInput" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins_medium"
        android:padding="16dp"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_check" />


</androidx.constraintlayout.widget.ConstraintLayout>